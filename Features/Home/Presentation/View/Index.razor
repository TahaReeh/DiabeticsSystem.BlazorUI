@inherits IndexBase
@attribute [Route(AppRouter.Home)]
@using DiabeticsSystem.BlazorUI.Features.Home.Presentation.View

<PageTitle>Home</PageTitle>

<h3 class="mb-5">Home</h3>
<div class="row">
    <div class="col-lg-3">
        <DataCardWidget Title="Products"
                        IconX="@(new Icons.Regular.Size24.Apps())"
                        Visible=@Overlay>
            <RawTemplate>
                @homeAnalyticsVM.ProductCount
            </RawTemplate>
        </DataCardWidget>
    </div>
    <div class="col-lg-3">
        <DataCardWidget Title="Customers"
                        IconX="@(new Icons.Regular.Size24.People())"
                        Visible=@Overlay>
            <RawTemplate>
                @homeAnalyticsVM.CustomerCount
            </RawTemplate>
        </DataCardWidget>
    </div>
    <div class="col-lg-3">
        <DataCardWidget Title="Records"
                        IconX="@(new Icons.Regular.Size24.PersonBoard())"
                        Visible=@Overlay>
            <RawTemplate>
                @homeAnalyticsVM.PatientMovesCount
            </RawTemplate>
        </DataCardWidget>
    </div>
    <div class="col-lg-3">
        <DataCardWidget Title="Users"
                        IconX="@(new Icons.Regular.Size24.Person())"
                        Visible=@Overlay>
            <RawTemplate>
                @homeAnalyticsVM.UsersCount
            </RawTemplate>
        </DataCardWidget>
    </div>
</div>
<div class="row pt-3">
    <div class="col-lg-3">
        <DataCardWidget Title="Doctors"
                        IconX="@(new Icons.Regular.Size24.Pill())"
                        Visible=@Overlay>
            <RawTemplate>
                @homeAnalyticsVM.DoctorsCount
            </RawTemplate>
        </DataCardWidget>
    </div>
</div>